package com.syntel.tripdistance;

import java.math.BigDecimal;

public class DistanceBean {

	public DistanceBean(Long id, String from, String to, String midpoint, BigDecimal originalDistance,
			BigDecimal originToMidpoint, BigDecimal midpointToDestination, BigDecimal total_distance) {
		this.id = id;
		this.from = from;
		this.to = to;
		this.midpoint = midpoint;
		this.distance = originalDistance;
		this.originToMidpoint = originToMidpoint;
		this.midpointToDestination = midpointToDestination;
		this.total_distance = total_distance;
	}

	public Long getId() {
		return id;
	}

	public void setId(Long id) {
		this.id = id;
	}

	public String getFrom() {
		return from;
	}

	public void setFrom(String from) {
		this.from = from;
	}

	public String getTo() {
		return to;
	}

	public void setTo(String to) {
		this.to = to;
	}

	public String getMidpoint() {
		return midpoint;
	}

	public void setMidpoint(String midpoint) {
		this.midpoint = midpoint;
	}

	public BigDecimal getDistance() {
		return distance;
	}

	public void setDistance(BigDecimal distance) {
		this.distance = distance;
	}

	public BigDecimal getOrigintomidpoint() {
		return originToMidpoint;
	}

	public void setOrigintomidpoint(BigDecimal origintomidpoint) {
		this.originToMidpoint = origintomidpoint;
	}

	public BigDecimal getMidpointtodestination() {
		return midpointToDestination;
	}

	public void setMidpointtodestination(BigDecimal midpointtodestination) {
		this.midpointToDestination = midpointtodestination;
	}

	public BigDecimal getTotal_Distance() {
		return total_distance;
	}

	public void setTotal_Distance(BigDecimal total) {
		this.total_distance = total;
	}

	private Long id;
	private String from;
	private String to;
	private String midpoint;
	
	// I would like to hide this field, but it seems to break the 
	private BigDecimal distance;
	
	private BigDecimal originToMidpoint;
	private BigDecimal midpointToDestination;
	private BigDecimal total_distance;

	public DistanceBean() {

	}


}